<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Orders Results</title>
</head>
<body>
    <h1>Order Search Results</h1>
    <% if (orderData.length > 0) { %>
        <table>
            <tr>
                <th>Order ID</th>
                <th>Food Item</th>
                <th>Quantity</th>
                <th>Customer Name</th>
                <th>Customer Email</th>
                <th>Customer Address</th>
            </tr>
            <% orderData.forEach(function(order) { %>
                <tr>
                    <td><%= order.OrderID %></td>
                    <td><%= order.FoodItem %></td>
                    <td><%= order.Quantity %></td>
                    <td><%= order.CustomerName %></td>
                    <td><%= order.CustomerEmail %></td>
                    <td><%= order.CustomerAddress %></td>
                </tr>
            <% }); %>
        </table>
    <% } else { %>
        <p>No orders found for the provided email address. Try a different email!</p>
    <% } %>

    <input type="button" id="menureturn" name="operation" value="Return to order page" onclick="location.href='/order'"><br><br>
</body>
</html>
