<h1>
    Leave a Review
</h1>

<div class="reviewform">
    <form method="post" action="insertreview">
            <div class="reviewform">
            <p>Name</p>
            <input type="text" name="name" required>
        </div>
        <div class="reviewform">
            <p>Email</p>
            <input type="text" name="email" required>
        </div>
        <div class="reviewform">
            <p>Rating</p>
            <select name="rating" required>
                <option value="">Select rating</option>
                <option value="5">5 stars</option>
                <option value="4">4 stars</option>
                <option value="3">3 stars</option>
                <option value="2">2 stars</option>
                <option value="1">1 star</option>
            </select>
        </div>
        <div class="reviewform">
            <p>Comments or Concerns</p>
            <textarea name="comments" rows="8" cols="50"></textarea>
        </div>
        <br><br>
        <div class="reviewform">
            <button type="submit">Submit</button>
        </div>
    </form>
</div>

<div>
    <h1>See Our Reviews</h1>
    <ul class="reviewlist">
        <% data.forEach(function(review)
         { %>
            <li class="reviewitem">Name: <%= review.name %>
                <br>Email: <%= review.email %>
                <br>Rating: <%= review.rating %>
                <br>Comments: <%= review.comments %>
                <br><br><br>
            </li>
        <% }); %>
            </ul>
</div>


</body>
</html>